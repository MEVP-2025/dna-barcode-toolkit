{
  "name": "dna-barcode-toolkit",
  "version": "1.0.0",
  "description": "DNA Barcode Analysis Tool",
  "main": "electron/main.js",
  "type": "module",
  "author": "uiskskkekekk",
  "license": "MIT",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\" \"wait-on http://localhost:5174 http://localhost:3001 && electron .\"",
    "build": "npm run frontend:build && npm run backend:install",
    "dist": "npm run build && electron-builder",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "backend:dev": "cd backend && npm run dev",
    "backend:install": "cd backend && npm install",
    "postinstall": "cd frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "concurrently": "^8.2.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.mevp.dna-barcode-toolkit",
    "productName": "DNA Barcode Toolkit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/node_modules/**/*",
      "!backend/uploads/**/*",
      "!backend/outputs/**/*",
      "!backend/logs/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/**/*",
          "!uploads/**/*",
          "!outputs/**/*",
          "!logs/**/*"
        ]
      }
    ],
    "mac": {
      "icon": "MEVP.png",
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "icon": "MEVP.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "MEVP.png",
      "target": "AppImage"
    }
  }
}